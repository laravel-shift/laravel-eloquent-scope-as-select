{
    "name": "protonemedia/laravel-eloquent-scope-as-select",
    "description": "Laravel package to add Eloquent scopes as constraints as subquery selects.",
    "keywords": [
        "protonemedia",
        "laravel-eloquent-scope-as-select"
    ],
    "homepage": "https://github.com/protonemedia/laravel-eloquent-scope-as-select",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pascal Baljet",
            "email": "pascal@protone.media",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1",
        "illuminate/support": "^8.67|^9.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.3",
        "orchestra/testbench": "^6.23|7.0",
        "phpunit/phpunit": "^9.4"
    },
    "autoload": {
        "psr-4": {
            "ProtoneMedia\\LaravelEloquentScopeAsSelect\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProtoneMedia\\LaravelEloquentScopeAsSelect\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}